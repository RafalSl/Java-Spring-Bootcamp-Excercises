    <form action="#" method="post" th:action="@{/}" th:object="${person}">
        <p th:if="${#fields.hasErrors('firstName')}" th:errors="*{firstName}">Imię:</p> <input type="text" th:field="*{firstName}" placeholder="Podaj imię" />
        <input type="submit" value="Save" />
    </form>
