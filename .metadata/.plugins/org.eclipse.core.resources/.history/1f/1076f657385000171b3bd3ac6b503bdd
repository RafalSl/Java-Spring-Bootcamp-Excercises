package pl.reaktor.controller;

import javax.validation.Valid;

import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.validation.BindingResult;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;

import pl.reaktor.model.NewMember;

@Controller
public class HomeController {

	@RequestMapping("/")
	public String home(Model model) {
		return "login";
	}

	@RequestMapping("/start")
	public String start (Model model) {
		return "index";
	}
	
	@GetMapping("/login")
	public String logowanie(@Valid NewMember newMember, BindingResult result, Model model) {
		model.addAttribute(newMember);
		return "login";
	}
	
	
	/*	@PostMapping("/login")
	public String logowanieBad(NewMember newMember, Model model) {
		model.addAttribute(newMember);
//		if(result.hasErrors())
            return "start";
        else {            
            return "index";
        }
	}*/
	
}
